#include <iostream>
#include <string>
using namespace std;

struct Student {
    int id;
    string name;
    float cgpa;
};

void addStudents(Student* &students, int &n) {
    cout << "Enter number of students: ";
    cin >> n;
    students = new Student[n];
    for (int i = 0; i < n; i++) {
        cout << "Enter ID, Name, CGPA: ";
        cin >> students[i].id >> students[i].name >> students[i].cgpa;
    }
}

void insertionSortByCGPA(Student* students, int n) {
    for (int i = 1; i < n; i++) {
        Student key = students[i];
        int j = i - 1;
        while (j >= 0 && students[j].cgpa < key.cgpa) {
            students[j + 1] = students[j];
            j--;
        }
        students[j + 1] = key;
    }
}

void displayStudents(Student* students, int n) {
    for (int i = 0; i < n; i++)
        cout << students[i].id << " " << students[i].name << " " << students[i].cgpa << endl;
}

int main() {
    Student* students = nullptr;
    int n;
    addStudents(students, n);
    insertionSortByCGPA(students, n);
    cout << "\nSorted Student List (by CGPA Descending):\n";
    displayStudents(students, n);
    delete[] students;
    return 0;
}
