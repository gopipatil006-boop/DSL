class Parcel:
    def _init_(self, weight, profit):
        self.weight = weight
        self.profit = profit
        self.ratio = profit / weight

def fractional_knapsack(parcels, capacity):
    parcels.sort(key=lambda x: x.ratio, reverse=True)
    total_profit = 0.0
    selected = []

    for parcel in parcels:
        if capacity == 0:
            break
        if parcel.weight <= capacity:
            capacity -= parcel.weight
            total_profit += parcel.profit
            selected.append((parcel.weight, parcel.profit, 1))
        else:
            fraction = capacity / parcel.weight
            total_profit += parcel.profit * fraction
            selected.append((parcel.weight * fraction, parcel.profit * fraction, fraction))
            capacity = 0

    return total_profit, selected

def main():
    n = int(input("Enter number of parcels: "))
    parcels = []
    for i in range(n):
        weight = float(input(f"Enter weight of parcel {i+1}: "))
        profit = float(input(f"Enter profit of parcel {i+1}: "))
        parcels.append(Parcel(weight, profit))

    capacity = float(input("Enter truck capacity: "))

    total_profit, selected = fractional_knapsack(parcels, capacity)

    print("\nSelected Parcels:")
    print("Weight\tProfit\tFraction Taken")
    for w, p, f in selected:
        print(f"{w:.2f}\t{p:.2f}\t{f:.2f}")

    print("\nMaximum Profit Achieved:", round(total_profit, 2))

if _name_ == "_main_":
    main()
